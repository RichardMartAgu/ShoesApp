<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_details_shop"
        android:layout_width="236dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Detalles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_item_name"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/shop_item_name"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:padding="5dp"
        android:paddingVertical="10dp"
        android:paddingTop="10dp"
        android:text="Tienda"
        android:textAllCaps="false"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/shop_item_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shop_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:paddingVertical="10dp"
        android:paddingTop="10dp"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/shop_fav_btn"
        android:layout_width="77dp"
        android:layout_height="59dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shop_item_name"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>